<template>
  <div>
    <p>Logging out...</p>
  </div>
</template>

<script>
export default {
  async created() {
    try {
      await this.$axios.post('auth/logout/', {}, {
        headers: {
          'Authorization': `Token ${localStorage.getItem('authToken')}`,
        },
      });
      localStorage.removeItem('authToken');
      this.$router.push({ name: 'UserLogin' });
    } catch (error) {
      console.error('Error on logout:', error);
    }
  }
};
</script>
